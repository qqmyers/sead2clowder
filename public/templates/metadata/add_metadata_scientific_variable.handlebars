<form class="form-horizontal col-md-12">
    <div class="form-group">
        <label for="field-value" class="col-sm-2 control-label" title="{{field_id}}">
            <strong>{{field_label}}</strong>
        </label>
        <div class="col-sm-7">
            <input type="text" class="form-control" id="field-value" data-id="{{field_id}}"
                   data-label="{{field_label}}" placeholder="type here...">
            <input type="checkbox" id="useSynonyms">
            <label for="useSynonyms">Use synonyms</label>
            <div class="form-group">
              <label for="field-value" class="col-sm-1 control-label">
                <strong>Unit</strong>
              </label>
              <div class="col-sm-11">
                <input type="text" class="form-control" id="unit-value"
                       placeholder="Enter the unit here...">
              </div>
            </div>
        </div>
        <div class="col-sm-3">
            <button id="add-metadata-button" type="submit" class="btn btn-default"><span class="glyphicon glyphicon-saved"></span> Submit</button>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-offset-2 col-sm-7">
            {{field_description}}
        </div>
    </div>
</form>
